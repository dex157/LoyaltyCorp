printWidth: 80
proseWrap: always
singleQuote: true
semi: false
bracketSpacing: true
parser: babylon
trailingComma: none

overrides:
- files: '*.vue'
  options:
    parser: vue

- files: '*.md'
  options:
    parser: markdown

- files: '*.json'
  options:
    parser: json

- files: '*.scss'
  options:
    parser: css
